{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node16",
    "noImplicitAny": true,
    "outDir": "dist/esm",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2017",
    "allowJs": true
  },
  "include": ["libs/**/*", "decs.d.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "node16",
      "moduleResolution": "node"
    },
    "files": true
  }
}
