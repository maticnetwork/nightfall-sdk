{
  "name": "nightfall-sdk",
  "version": "0.1.0",
  "description": "SDK for interacting with Polygon Nightfall",
  "keywords": [
    "nightfall",
    "sdk",
    "nightfall_3",
    "nf3"
  ],
  "author": "Polygon Nightfall",
  "license": "",
  "dependencies": {
    "axios": "^0.27.2",
    "bip39": "^3.0.4",
    "dotenv": "^16.0.1",
    "events": "^3.3.0",
    "joi": "^17.6.0",
    "pino": "^8.0.0",
    "pino-pretty": "^8.0.0",
    "queue": "^6.0.2",
    "reconnecting-websocket": "^4.4.0",
    "web3": "^1.7.3",
    "ws": "^8.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/events": "^3.0.0",
    "@types/jest": "^28.1.3",
    "@types/node": "^17.0.40",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "babel-jest": "^28.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "prettier": "2.6.2",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "main": "index.mjs",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "prettier": "prettier --check .",
    "test:ganache": "DOTENV_CONFIG_PATH=./examples/.env.ganache jest --setupFiles dotenv/config",
    "eg:deposit:ganache": "ts-node -r dotenv/config examples/txDeposit.ts dotenv_config_path=./examples/.env.ganache dotenv_config_debug=true",
    "eg:transfer:ganache": "ts-node -r dotenv/config examples/txTransfer.ts dotenv_config_path=./examples/.env.ganache",
    "eg:withdrawal:ganache": "ts-node -r dotenv/config examples/txWithdrawal.ts dotenv_config_path=./examples/.env.ganache",
    "eg:finalise-withdrawal:ganache": "ts-node -r dotenv/config examples/txWithdrawalFinalise.ts dotenv_config_path=./examples/.env.ganache",
    "eg:balances:ganache": "ts-node -r dotenv/config examples/balances.ts dotenv_config_path=./examples/.env.ganache",
    "eg:export-commitments:ganache": "ts-node -r dotenv/config examples/exportCommitments.ts dotenv_config_path=./examples/.env.ganache"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
